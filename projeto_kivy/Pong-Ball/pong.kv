#:kivy 1.11.1

<PongGame>:
    ball: pong_ball
    player1: pong_player1
    player2: pong_player2

    canvas: 
        Color: 
            rgba: 0, 0, 0, 1
        Rectangle: 
            size: self.size
            pos: self.pos

    PongBall:
        id: pong_ball
        size: 50, 50
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle: 
                size: self.size
                pos: self.pos

    PongPaddle:
        id: pong_player1
        x: root.x
        center_y: root.center_y
        size: 25, 200
        canvas: 
            Color: 
                rgba: 1, 1, 1, 1
            Rectangle: 
                size: self.size
                pos: self.pos

    PongPaddle:  # <-- Aqui estava o erro (corrigido)
        id: pong_player2
        x: root.width - self.width
        center_y: root.center_y
        size: 25, 200
        canvas: 
            Color: 
                rgba: 1, 1, 1, 1
            Rectangle: 
                size: self.size
                pos: self.pos
